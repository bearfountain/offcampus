<% if @properties.length == 0 %>
    <p>Nothing found. <a href='#' class='reset_filters'>reset all filters</a></p>
<% else %>
  <% if @ajax == true %>
    <%= render :partial => 'list', :locals => { :properties => @properties } %>
  <% else %>
    <h3>Bedrooms</h3>
    <nav id="size_categories">
      <ul>
        <li class='active'><a href='#' rel='-1'>All (<%= @properties.length %>)</a></li>
        <li><a href='#' rel='0'>Studio</a></li>
        <li><a href='#' rel='1'>1 Bedroom (<%= @counts[1] || 0 %>)</a></li>
        <li><a href='#' rel='2'>2 Bedrooms (<%= @counts[2] || 0 %>)</a></li>
        <li><a href='#' rel='3'>3 Bedrooms (<%= @counts[3] || 0 %>)</a></li>
        <li><a href='#' rel='4'>4 Bedrooms (<%= @counts[4] || 0 %>)</a></li>
        <li><a href='#' rel='5'>5 Bedrooms (<%= @counts[5] || 0 %>)</a></li>
        <li><a href='#' rel='6'>6+ Bedrooms (<%= @counts[6] || 0 %>)</a></li>
      </ul>
    </nav>
    <div id="sort_categories">
      <h3>Rent</h3>
      <div class="sliderbar"></div>
    </div>

    <section class='listing'>
        <%= render :partial => 'list', :locals => { :properties => @properties } %>
     </section>
  <% end %>
<% end %>