<% if @properties.length == 0 %>
    <p>Nothing found. <a href='#' class='reset_filters'>reset all filters</a></p>
<% else %>
  <% if @ajax == true %>
    <%= render :partial => 'list', :locals => { :properties => @properties } %>
  <% else %>
    <nav id="size_categories">
      <ul>
        <li class='active'><a href='#' rel='-1'>All</li>
        <li><a href='#' rel='0'>Studio</li>
        <li><a href='#' rel='1'>1 Bedroom (<%= @counts[1] || 0 %>)</li>
        <li><a href='#' rel='2'>2 Bedroom (<%= @counts[2] || 0 %>)</li>
        <li><a href='#' rel='3'>3 Bedroom (<%= @counts[3] || 0 %>)</li>
        <li><a href='#' rel='4'>4 Bedroom (<%= @counts[4] || 0 %>)</li>
        <li><a href='#' rel='5'>5 Bedroom (<%= @counts[5] || 0 %>)</li>
        <li><a href='#' rel='6'>6+ Bedroom (<%= @counts[6] || 0 %>)</li>
      </ul>
    </nav>
    <div id="sort_categories">
      <div class="sliderbar"></div>
    </div>

    <section class='listing'>
      <h3># Bedroom</h3>
        <%= render :partial => 'list', :locals => { :properties => @properties } %>
     </section>
  <% end %>
<% end %>